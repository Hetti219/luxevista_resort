<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewBookingType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room Booking"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Ocean View Suite"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewBookingDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Date &amp; Time: Not Applicable"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textViewConfirmationId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Confirmation ID: ABC1234"
        android:textSize="14sp" />

</LinearLayout>